<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.martinez.conia_app.Fragments.createAccountFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/linear_background"
            android:id="@+id/linear_layout_create">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="20sp"/>
        <EditText
                android:id="@+id/ctr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_user"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"/>
        <EditText
                android:id="@+id/ctr_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_person_add_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_add_black_24dp"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="text"/>
        <EditText
                android:id="@+id/ctr_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"/>

        <EditText
                android:id="@+id/ctr_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"/>
        <EditText
                android:id="@+id/crt_pass_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"/>

        <Button
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Create"
                android:background="@drawable/rounded_button"
                android:textColor="@color/cardview_light_background"/>

    </LinearLayout>

</FrameLayout>
