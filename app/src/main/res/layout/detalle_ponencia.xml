<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="241dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SDFJSDFSAKJDAPS"
                  android:id="@+id/titulo_ponencia" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SDFJSDFSAKJDAPS"
                  android:id="@+id/hora_inicio" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SDFJSDFSAKJDAPS"
                  android:id="@+id/hora_final" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SDFJSDFSAKJDAPS"
                  android:id="@+id/duracion" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SDFJSDFSAKJDAPS"
                  android:id="@+id/descripcion_ponencia" />

    </LinearLayout>
</LinearLayout>